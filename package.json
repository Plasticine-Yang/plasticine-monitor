{
  "version": "0.0.0",
  "private": true,
  "author": "Plasticine-Yang",
  "description": "node monorepo template",
  "license": "MIT",
  "type": "module",
  "keywords": [],
  "scripts": {
    "dev": "pnpm run --filter !@plasticine-monitor/server --filter !@plasticine-monitor/playground --parallel dev",
    "build": "pnpm run --filter !@plasticine-monitor/server --filter !@plasticine-monitor/playground --parallel build",
    "dev:server": "pnpm -C packages/server dev",
    "dev:server:start": "pnpm -C packages/server dev:start",
    "dev:server:stop": "pnpm -C packages/server dev:stop",
    "dev:server:up": "pnpm -C packages/server dev:up",
    "dev:server:down": "pnpm -C packages/server dev:down",
    "deploy:server": "pnpm -C packages/server run deploy",
    "deploy:server:start": "pnpm -C packages/server run deploy:start",
    "deploy:server:stop": "pnpm -C packages/server run deploy:stop",
    "deploy:server:up": "pnpm -C packages/server run deploy:up",
    "deploy:server:down": "pnpm -C packages/server run deploy:down",
    "server:nest": "pnpm -C packages/server nest",
    "server:format": "pnpm -C packages/server format",
    "server:format:src": "pnpm -C packages/server format:src",
    "test:core": "pnpm -C packages/core test",
    "test:browser": "pnpm -C packages/browser test",
    "test:server": "pnpm -C packages/server test",
    "lint": "eslint --ext .ts --fix packages",
    "play": "pnpm -C playground dev",
    "play:mock": "pnpm -C playground dev:mock",
    "play:sentry": "pnpm -C playground dev:sentry",
    "play:sentry-mock": "pnpm -C playground dev:sentry-mock",
    "play:preview": "pnpm -C playground build && pnpm -C playground preview",
    "play:preview-mock": "pnpm -C playground build && pnpm -C playground preview:mock",
    "commit": "cz",
    "up": "taze -wI",
    "prepare": "husky install",
    "changeset": "changeset",
    "changeset:version": "changeset version"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@plasticine-yang/eslint-config-typescript": "^0.1.4",
    "@types/node": "^18.11.18",
    "commitizen": "^4.2.6",
    "cross-env": "^7.0.3",
    "cz-git": "^1.4.1",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "taze": "^0.8.5",
    "tsup": "^6.7.0",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4",
    "vitest": "^0.26.2"
  }
}
