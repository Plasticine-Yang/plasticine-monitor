{
  "version": "0.0.0",
  "private": true,
  "author": "Plasticine-Yang",
  "description": "node monorepo template",
  "license": "MIT",
  "type": "module",
  "keywords": [],
  "scripts": {
    "dev:server": "pnpm -C packages/server start:dev",
    "build": "run-p build:shared build:core build:browser",
    "build:core": "pnpm -C packages/core build",
    "build:browser": "pnpm -C packages/browser build",
    "build:shared": "pnpm -C packages/shared build",
    "build:server": "pnpm -C packages/server build",
    "test:core": "pnpm -C packages/core test",
    "test:server": "pnpm -C packages/server test",
    "type-check:core": "pnpm -C packages/core type-check",
    "type-check:browser": "pnpm -C packages/browser type-check",
    "type-check:shared": "pnpm -C packages/shared type-check",
    "lint": "eslint --ext .ts --fix packages",
    "play": "pnpm -C playground dev",
    "play:mock": "pnpm -C playground dev:mock",
    "play:prod": "pnpm -C playground build && pnpm -C playground preview",
    "play:prod-mock": "pnpm -C playground build && pnpm -C playground preview:mock",
    "commit": "cz",
    "up": "taze -wI",
    "prepare": "husky install",
    "changeset": "changeset",
    "changeset:version": "changeset version"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@plasticine-yang/eslint-config-typescript": "^0.1.4",
    "@types/node": "^18.11.18",
    "commitizen": "^4.2.6",
    "cz-git": "^1.4.1",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "taze": "^0.8.5",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2",
    "vitest": "^0.26.2"
  }
}
